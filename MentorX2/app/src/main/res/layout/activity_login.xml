<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.farisgituthok.mentorx.Login">

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="359dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:hint="Username"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginTop="176dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="359dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="textPassword"
        tools:hint="Password"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="69dp"
        android:layout_below="@+id/etUsername"
        android:layout_alignRight="@+id/etUsername"
        android:layout_alignEnd="@+id/etUsername" />

    <Button
        android:id="@+id/bLogin"
        android:layout_width="359dp"
        android:layout_height="49dp"
        android:text="Login"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="123dp"
        android:layout_below="@+id/etPassword"
        android:layout_alignLeft="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword" />

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="250dp"
        android:layout_height="28dp"
        android:text="Belum Punya Akun ? Register Disini !"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="181dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp"
        android:layout_below="@+id/bLogin"
        android:layout_alignRight="@+id/bLogin"
        android:layout_alignEnd="@+id/bLogin" />

</RelativeLayout>
